<div class="col-lg-12 col-sm-12">
  <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
      <div class="btn-group" role="group">
          <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
              <div class="hidden-xs">Dinero</div>
          </button>
      </div>
      <div class="btn-group" role="group">
          <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
              <div class="hidden-xs">Historial</div>
          </button>
      </div>
      <div class="btn-group" role="group">
          <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <div class="hidden-xs">Empleados</div>
          </button>
      </div>
  </div>
  <div class="well">
    <div class="tab-content">
      <div class="tab-pane fade in active" id="tab1">
        <h2>Dinero total: <span class="label label-info">$<%= @total %></span></h2>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
          <h3>Dinero por transferencias</h3>
          <%= line_chart transfers_daily_amounts_path, xtitle: 'Fecha', ytitle: 'Total', width: '700px', height: '400px'%>
          </div>
        </div>
        <hr class="colorgraph">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
          <h3>Dinero por operaciones</h3>
          <%= line_chart operations_daily_amounts_path, xtitle: 'Fecha', ytitle: 'Total', width: '700px', height: '400px'%>
          </div>
        </div>
      </div>
  
      <div class="tab-pane fade in" id="tab2">
        <h2>Transferencias</h2>
        <div class="row">
          <div class="col-md-3">
            <h3>Completadas: <span class="label label-success"><%= @completed %></span></h3>
          </div>
          <div class="col-md-3">
            <h3>Pendientes: <span class="label label-warning"><%= @pending %></span></h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
          <h3>Transferencias diarias</h3>
          <%= column_chart transfers_daily_number_path, xtitle: 'Fecha', ytitle: 'Número de transferencias', width: '700px', height: '400px'%>
          </div>
        </div>
        <hr class="colorgraph">
        <h2>Operaciones</h2>
        <div class="row">
          <div class="col-md-3">
            <h3>Depósitos: <span class="label label-success"><%= @deposits %></span></h3>
          </div>
          <div class="col-md-3">
            <h3>Retiros: <span class="label label-warning"><%= @withdrawals %></span></h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
          <h3>Operaciones diarias</h3>
          <%= column_chart operations_daily_number_path, xtitle: 'Fecha', ytitle: 'Número de operaciones', width: '700px', height: '400px'%>
          </div>
        </div>
      </div>

      <div class="tab-pane fade in" id="tab3">
        <h2>Empleados</h2>
        <%= render partial: "employees/index", locals: {employees: @employees} %>
        <%= link_to(new_employee_path) do %>
          <button type="button" class="btn btn-success btn-lg">Crear empleado</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

