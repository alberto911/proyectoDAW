<!DOCTYPE html>
<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <%= form_for [@sender, @receiver] do |f| %>
      <h2>Registra a un receptor</h2>
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.label :name, 'Nombre' %>
            <%= f.text_field :name, class: 'form-control input-lg', placeholder: 'Nombre', required: true %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.label :last_name, 'Apellido' %>
            <%= f.text_field :last_name, class: 'form-control input-lg', placeholder: 'Apellido', required: true  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
          <div class="form-group">
            <%= f.label :phone_number, 'Celular' %>
            <%= f.text_field :phone_number, class: 'form-control input-lg', placeholder: 'Celular', required: true  %>
          </div>
        </div>
      </div>
      <hr class="colorgraph">
        <div class="row">
          <%= f.submit(@receiver.new_record? ? 'Registrar' : 'Edit Profile', class: "btn btn-success") %>
        </div>
    <% end %>
    <%= link_to "<< AtrÃ¡s", sender_path(@sender.id) %>
  </div>
</div>
